<header>
  <h1>Bake Shop</h1>
</header>
<div class="container">
<div class="row">
    <%if(data.length){
      for(var i = 0; i<data.length; i++){ %>

          <div class="col-sm-6 col-md-4" align="center" id = "products">
            <img id ="product_img" src="/images/<%=data[i].image%>" alt="">
            <h3><%=data[i].name%></h3>
            <p>$<%=data[i].price%></p>
            <% if ((data[i].amnt <= 10)&&(data[i].amnt>0)){%>
              <p>Only <%=data[i].amnt%> are left!</p>
              <p><a href="/product_view/<%= data[i].id %>"class="btn btn-primary" role="button">View Item</a></p>
              <p><a href="/add_to_cart/<%= data[i].id %>"class="btn btn-secondary" role="button">Add to cart</a></p>
            <%}else if (data[i].amnt<=0) {%>
              <p>Out of stock!</p>
            <%}else{%>
            <p><a href="/product_view/<%= data[i].id %>"class="btn btn-primary" role="button">View Item</a></p>
            <p><a href="/add_to_cart/<%= data[i].id %>"class="btn btn-secondary" role="button">Add to cart</a></p>
            <%}%>
          </div>

    <%}
   }%>

   </div>
   <div class="row">
     <div class="col-lg-12"  id = "products">
       <% if (pageCount > 1) { %>
    <ul class="pagination" >
      <% if (currentPage > 1) { %>
       <li><a href="/bake_shop/?page=1">&laquo;</a></li>
      <% } %>
      <% var i = 1;
      if (currentPage > 5) {
      i = +currentPage - 4;
      } %>
      <% if (i !== 1) { %>
       <li class="disabled"><a href="#">...</a></li>
      <% } %>
      <% for (i; i<=pageCount; i++) { %>
        <% if (currentPage == i) { %>
         <li class="active"><span><%= i %> <span class="sr-only">(current)</span></span></li>
        <% } else { %>
         <li><a href="/bake_shop/?page=<%= i %>"><%= i %></a></li>
        <% } %>
        <% if (i == (+currentPage + 4)) { %>
         <li class="disabled"><a href="#">...</a></li>
        <% break; } %>
      <% } %>
      <% if (currentPage != pageCount) { %>
       <li><a href="/bake_shop/?page=<%= pageCount %>">&raquo;</a></li>
      <% } %>
    </ul>
    <% } %>

     </div>
   </div>

  </div>
