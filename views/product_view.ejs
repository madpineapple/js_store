<h1>Product View</h1>
<div class="row">
  <%if(data.length){
    for(var i = 0; i<data.length; i++){ %>

        <div class="col-md-6 "  id = "products">
          <img id ="product_img" src="/images/<%=data[i].image%>" alt="">
          <h3><%=data[i].name%></h3>
          <p>$<%=data[i].description%></p>
          <p>$<%=data[i].price%></p>
          <p><a href="/add_to_cart/<%= data[i].id %>"class="btn btn-secondary" role="button">Add to cart</a></p>
        </div>

  <%}
  }%>

  </div>
</div>
