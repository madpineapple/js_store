<header>
  <h1>Contact us</h1>
</header>
<div class="container">
  <div class="row">
   <div class="col-xl-8 offset-xl-2 py-5" id = "products">
     <p class="lead">
        Please feel free to stop during business hours!
        We have plenty of free parking and out door seating during summer months.
        Stop by and see us soon, or call ahead for take out.
      </p>
      <% include ./partials/messages %>
    </div>
  </div>
  <div class="row">
    <div class="col text-center" id ="contact" >
      <h2>Address</h2>
      <p>111 Easy Street</p>
      <p>Burlington, Vt 05499</p>
      <p>802-222-1111</p>
      <h2>Hours</h2>
      <p>Monday - Thursday 11am - 10pm</p>
      <p>Friday & Saturday 11am - 11pm</p>
      <p>Sunday 10am - 10pm</p>
      <h2>Connect</h2>
      <a href="http://www.facebook.com/"id="icon">
        <i class="fab fa-facebook-square icon"></i>
      </a>
      <a href="http://www.instagram.com/" id="icon">
        <i class="fab fa-instagram icon " ></i>
      </a>

    </div>
    <div class="col" id ="contact">
      <div class="card card-body text-center">
        <h2>Email Us</h2>
        <form action="/other/contact" method="post">

          <label for="name">Name</label>
          <div class="form-group">
            <input type="text" name="name">
          </div>
          <label for="customer_email">Email</label>
          <div class="form-group">
            <input type="text" name="customer_email">
          </div>
          <label for="phone">Phone Number</label>
          <div class="form-group">
            <input type="text" name="phone_number">
          </div>

           <div class="form-group">
             <textarea name="content" rows="8" cols="50"></textarea>
           </div>

            <button type="submit" class="btn btn-primary btn-block">Send</button>
        </form>
      </div>
    </div>
   </div>
  </div>
